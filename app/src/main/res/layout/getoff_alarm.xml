<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movingbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:src="@drawable/movingbus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="35dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="하차 알람을 시작합니다."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="위치정보 수집에 동의하십니까?"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAgree"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/agree_clicker"/>

            <Button
                android:id="@+id/btnDisAgree"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/disagree_clicker"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>